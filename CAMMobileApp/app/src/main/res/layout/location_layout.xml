<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cam.cammobileapp.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">


    <Button
        android:id="@+id/turnOnGPS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Turn On Location Services"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="60dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/viewLong"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Longitude"
        android:textSize="25dp"
        android:layout_marginStart="29dp"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/longCoord"
        android:layout_marginEnd="30dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintTop_toTopOf="@+id/longCoord"
        app:layout_constraintLeft_toRightOf="@+id/longCoord" />

    <TextView
        android:id="@+id/viewLat"
        android:layout_width="103dp"
        android:layout_height="42dp"
        android:text="Latitude"
        android:textSize="25dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/sendGPS"
        android:layout_marginEnd="37dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="106dp"
        android:layout_marginBottom="104dp"
        app:layout_constraintTop_toTopOf="@+id/longCoord" />

    <Button
        android:id="@+id/sendGPS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        app:layout_constraintRight_toLeftOf="@+id/viewLat"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="92dp"
        android:layout_marginRight="10dp" />

    <TextView
        android:id="@+id/longCoord"
        android:layout_width="0dp"
        android:layout_height="59dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/latCoord"
        app:layout_constraintRight_toRightOf="@+id/latCoord"
        android:layout_marginTop="107dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="106dp"
        app:layout_constraintLeft_toLeftOf="@+id/latCoord"
        app:layout_constraintTop_toTopOf="@+id/turnOnGPS" />

    <TextView
        android:id="@+id/latCoord"
        android:layout_width="174dp"
        android:layout_height="59dp"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/sendGPS"
        android:layout_marginStart="41dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="39dp"
        app:layout_constraintLeft_toLeftOf="parent" />
</android.support.constraint.ConstraintLayout>