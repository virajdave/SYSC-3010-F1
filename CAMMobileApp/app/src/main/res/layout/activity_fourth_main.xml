<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:gravity="center">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:id="@+id/main4_l1">
    <Switch
        android:id="@+id/switch1"
        android:layout_width="290dp"
        android:layout_height="55dp"
        android:layout_marginBottom="43dp"
        android:layout_marginEnd="33dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="42dp"
        android:layout_weight="0.08"
        android:text="Turn Lights On or Off"
        android:textSize="25dp"
        />

</LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/main4_l2"
        android:weightSum="1"
        android:layout_below="@+id/main4_l1"
        android:layout_alignParentStart="true">

        <ImageButton
            android:id="@+id/btn_alarm"
            android:layout_width="98dp"
            android:layout_height="101dp"
            android:layout_marginBottom="52dp"
            android:layout_marginEnd="13dp"
            android:adjustViewBounds="true"
            android:maxHeight="42dp"
            android:maxWidth="42dp"
            android:onClick="alaramSettings"
            android:scaleType="fitCenter"
            android:src="@drawable/alarm" />


    </LinearLayout>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="109dp"
        android:layout_height="136dp"
        android:layout_marginBottom="23dp"
        android:src="@drawable/cam"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/alarmText"
        android:layout_width="128dp"
        android:layout_height="87dp"
        android:layout_above="@+id/imageView3"
        android:layout_alignEnd="@+id/main4_l2"
        android:text="Change Alarm Settings"
        android:textSize="25dp" />

</RelativeLayout>